<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ProfileActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/red_bg" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="92dp"
            android:layout_height="93dp"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:src="@drawable/logo" />


        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/solway"
            android:paddingTop="15dp"
            android:text="Profil Patient"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_below="@id/infoText"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:src="@drawable/avatar"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/solway"
            android:hint="Nom Prénom"
            android:textColorHint="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="154dp"
                android:layout_height="100dp"
                android:background="@drawable/rounder"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/solway"
                    android:text="Age :"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="109dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:hint="Votre age"
                    android:textColor="@android:color/darker_gray"
                    android:textColorHint="@android:color/darker_gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounder"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/solway"
                    android:text="Poids :"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="109dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:hint="Votre poids"
                    android:textColor="@android:color/darker_gray"
                    android:textColorHint="@android:color/darker_gray" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="154dp"
                android:layout_height="100dp"
                android:background="@drawable/rounder"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/solway"
                    android:text="Sexe :"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="109dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:hint="Votre sexe"
                    android:textColor="@android:color/darker_gray"
                    android:textColorHint="@android:color/darker_gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounder"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/solway"
                    android:text="Taille :"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="109dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:hint="Votre taille"
                    android:textColor="@android:color/darker_gray"
                    android:textColorHint="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="154dp"
                android:layout_height="100dp"
                android:background="@drawable/rounder"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/solway"
                    android:text="Sang :"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="109dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:hint="O+"
                    android:textColor="@android:color/darker_gray"
                    android:textColorHint="@android:color/darker_gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounder"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/solway"
                    android:text="Téléphone:"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="109dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:hint="0616850789"
                    android:textColor="@android:color/darker_gray"
                    android:textColorHint="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/temp"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:onClick="temp"
                android:background="@drawable/rounded_corners_button"
                android:fontFamily="@font/solway"
                android:text="Traquer votre temperature"
                android:textColor="@android:color/white"
                android:textSize="17sp" />

            <Button
                android:id="@+id/bpm"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:onClick="bpm"
                android:background="@drawable/rounded_corners_button"
                android:fontFamily="@font/solway"
                android:text="Traquer vos battements du coeur"
                android:textColor="@android:color/white"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>